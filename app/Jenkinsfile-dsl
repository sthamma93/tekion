pipeline {
    agent any
    stages{
        stage('Build'){
            steps{
                sh 'mvn clean package -f tekion/app/'
                sh "docker build . -t tekion:${env.BUILD_ID} -f tekion/app/Dockerfile"
            }
        }
        stage('Deploy on container'){
            steps{
                sh "docker run -p 80:8080 -d tekion:${env.BUILD_ID}"
            }
        }
    }
}
